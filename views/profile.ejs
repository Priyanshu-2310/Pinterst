<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen text-white bg-zinc-800">
  <form hidden id="uploadimageform" action="/fileupload" method="post" enctype="multipart/form-data">
    <input type="file" name="image">
  </form>
  <div class="profdets flex flex-col items-center py-16 justify-center">
    <div class="relative">
      <span id="uploadicon" class="w-10 h-10 cursor-pointer absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
        <i class="ri-pencil-fill text-xl text-zinc-800 "></i>
      </span>
      <div class="w-32 h-32 bg-zinc-200 rounded-full mb-2 overflow-hidden">
        <img
          src="/images/uploads/<%= user.profileImage %>"
          class="h-full w-full object-cover"
          alt="profile image"
        />
      </div>
    </div>
    <h1 class="text-2xl font-semibold text-white"><%= user.name %></h1>
    <h3 class="text-md">@<%= user.username %></h3>
    <a
      href="/edit"
      class="px-10 mt-5 py-2 text-xs font-semibold bg-zinc-700 rounded-full"
      >Edit</a
    >
    <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-5">
      Add New Post
    </a>
  </div>
  <div class="cards flex flex-wrap gap-10 px-10">
    <div class="card">
      <div class="w-44 rounded-md h-52 bg-zinc-200 overflow-hidden">
        <img
          src="/images/uploads/<%= user?.posts[0]?.image %>"
          class="h-full w-full object-cover"
          alt=""
        />
      </div>
      <a href="/show/posts" class="inline-block text-xl font-semibold mt-3">Your Uploaded Image</a>
      <h5 class="text-xs font-medium opacity-60"><%= user.posts.length %></h5>
    </div>
  </div>
</div>
<script>
  let icon = document.querySelector("#uploadicon")
  icon.addEventListener("click", function(){
     document.querySelector("#uploadimageform input[type='file']").click()
  })

  document.querySelector("#uploadimageform input").addEventListener("change", function(){
    document.querySelector("#uploadimageform").submit()
  })
</script>
<% include ./partials/footer.ejs %>
